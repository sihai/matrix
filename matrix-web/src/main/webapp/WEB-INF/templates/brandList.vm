#set($JQUERY='$.')

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
	    <title>Matrix-Console:品牌管理</title>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="description" content="Matrix,Console,Brand">
	
	    <!-- Le styles -->
	    <link href="/assets/css/bootstrap.css" rel="stylesheet">
	    <link href="/assets/css/bootstrap-responsive.css" rel="stylesheet">
	    <link href="/assets/css/jquery-ui.css" rel="stylesheet">
	    <link href="/assets/css/matrix.css" rel="stylesheet">
	
	    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
	    <!--[if lt IE 9]>
	      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->
		
	    <!-- Le fav and touch icons -->
	    <link rel="shortcut icon" href="assets/ico/favicon.ico">
	    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" href="/assets/ico/apple-touch-icon-57-precomposed.png">
	</head>
	<body>
  		#parse("nav.vm")
  		<div class="container-fluid">
      		<div class="row-fluid">
        		#parse("header.vm")
        		<div class="span9">
          			<div class="row-fluid">
          				<div class="page-header">
          					<table style="width:100%;">
								<tr>
									<td style="text-align:left;"><h1>品牌管理 <small>记录活动中美好的瞬间，终生难忘！</small></h1></td>
									<td style="text-align:right;"><a class="btn btn-primary" href="#" onclick="newBrand()">添加品牌</a></td>
								</tr>
					    	</table>
						</div>
		            	
		            	<div class="widget_container">
						<div class="well nomargin">
							<div class="navbar navbar-static navbar_as_heading">
								<div class="navbar-inner">
									<div style="width: auto;" class="container">
										<a class="brand">品牌</a>
									</div>
								</div>
							</div>
							<div class="subnav">
								<div class="btn-toolbar pull-left">
									<div class="btn-group">
										<button class="btn btn-small active btn-duadua">All<span class="badge abs1">$!{resultModel.totalItem}</span></button>
										<button class="btn btn-small btn-duadua"><i class="icon-ok-3"></i> Published <span class="badge badge-info abs1"></span></button>
										<button class="btn btn-small btn-duadua"><i class="icon-pencil"></i> Draft <span class="badge badge-warning abs1"></span></button>
										<button class="btn btn-small btn-duadua"><i class="icon-trash-2 btn-duadua"></i> Trash <span class="badge badge-important abs1"></span></button>
									</div>
								</div>
								<form action="/brand.jhtml" class="navbar-search pull-right">
									<input name="name" type="text" class="search-query" #if(${resultModel.queryModel.name}) value="$!{resultModel.queryModel.name}" #else  placeholder="搜索" #end>
								</form>
							</div>
							
							<div class="subnav nobg">
								#parse("pagination.vm")
							</div>
							<table class="table smallfont">
								<thead>
									<tr>
										<td>品牌名称</td>
										<td>Logo</td>
										<td>公司名称</td>
										<td>公司主页</td>
										<td>状态</td>
										<td>操作</td>
									</tr>
								</thead>
								<tbody>
									#foreach($brand in ${resultModel.itemList})
										<tr>
											<td>
												<a class="post_title" href="#">$!{brand.name}</a>
												<div class="operation">
													<div style="display: none;" class="btn-group">
													  <button class="btn btn-small"><i class="icon-pencil-1"></i> Edit</button>
													  <button class="btn btn-small"><i class="icon-eye-2"></i> View</button>
													  <button class="btn btn-small"><i class="icon-trash-empty"></i> Delete</button>
													</div>
												</div>
											</td>
											<td><img style="width:80px;heigh:80px;" src="$!{brand.logoURL}" /></td>
											<td><a href="$!{brand.companyURL}" target="_blank">$!{brand.companyName}</td>
											<td>$!{brand.companyURL}</td>
											<td>
												$!{BrandStatusEnum.toEnum($!{brand.status}).name}
											</td>
											<td>
												<a class="btn btn-primary" onclick='updateBrand($!{brand.id})' href="#">修改</a>
												<a class="btn btn-danger" onclick="deleteBrand($!{brand.id}, '$!{brand.name}')" href="#">删除</a>
											</td>
										</tr>
									#end
								</tbody>
							</table>
							<div class="subnav nobg">
								#parse("pagination.vm")
							</div>
						</div>
					</div>
	          		</div><!--/row-->
       	 		</div><!--/span-->
      		</div><!--/row-->
			#parse("footer.vm")
    	</div><!--/.fluid-container-->
		
		<!--二次确认层-->
		<div class="modal hide fade" id="deleteLayer" style="width:480px;">
			<div class="widget_container">
				<div class="well">
					<div class="navbar navbar-static navbar_as_heading">
						<div class="navbar-inner">
							<div style="width: auto;" class="container">
								<a class="brand"><i class="icon-th-large-1">请确认</i></a>
							</div>
						</div>
					</div>
					<div id="ask" class="alert alert-error"></div>
					<div class="btn-toolbar" style="float:right;margin-bottom:10px;">
						<form id="deleteForm" class="form-horizontal" method="post" action="/brand_action.jhtml">
							<input type="hidden" name="_operation_" value="_delete_">
			 				<input type="hidden" id="brand_id" name="id" value="">
							<div class="btn-group">
						    	<button type="submit" class="btn btn-primary" style="width:128px;">提交</button>
						    	<button class="btn btn-danger" data-dismiss="modal" style="width:128px;">取消</button>
						  	</div>
						 </form>
					</div>
				</div>
			</div>
		</div>
		<!--二次确认层End-->
		<form id="page_form" method="get" action="/brand_list.jhtml">
			<input type="hidden" id="status" name="status" value="$!{resultModel.queryModel.status}" />
			<input type="hidden" id="current_page" name="current_page" value="$!{resultModel.queryModel.currentPage}" />
		</form>
		<div id="dialog"></div>
		#parse("js.vm")
  	</body>
  
  	<script type="text/javascript">
		function newBrand() {
			${JQUERY}layer({
			    type : 2,
			    title : ['添加品牌',true],
			    iframe : {src : '/brand.jhtml'},
			    area : ['750px' , '466px'],
			    offset : ['100px','']
			});
		}
		
		function updateBrand(brand) {
			${JQUERY}layer({
			    type : 2,
			    title : ['修改品牌',true],
			    iframe : {src : '/brand.jhtml?id=' + brand },
			    area : ['750px' , '466px'],
			    offset : ['100px','']
			});
		}
		
		function deleteBrand(id, name) {
			$("#brand_id").val(id);
			$("#ask").html("<strong>Warning!</strong>" + "您确认删除品牌：" + name + "？");
			$('#deleteLayer').modal({
	 			keyboard: true
			});
		}
	</script>
</html>